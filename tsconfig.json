{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": ["esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
