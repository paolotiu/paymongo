{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "lib": ["DOM"],
    "declarationDir": "dist/dts",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@@payments/*": ["src/payments/*"],
      "@@utils/*": ["src/utils/*"],
      "@@paymentIntents/*": ["src/paymentIntents/*"],
      "@@paymentMethods/*": ["src/paymentMethods/*"],
      "@@common/*": ["src/common/*"],
      "@@Paymongo/*": ["src/Paymongo/*"],
      "@@sources/*": ["src/sources/*"]
    }
  },
  "include": ["src"]
}
